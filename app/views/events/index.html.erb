<h1>Your events</h1>

<table>
	<thead>
		<tr>
			<th>Title</th>
			<th>start_date</th>
			<th>period</th>
		</tr>
	</thead>

	<tbody>
		<% @events.each do |event| %>
			<tr>
				<td class="col-md-2 col-xs-4"><%= event.title %></td>
				<td class="col-md-5 col-xs-4"><%= event.start_date %></td>
				<td class="col-md-5 col-xs-4"><%= event.period %></td>
			</tr>
		<% end %>
	</tbody>
</table>

<%= link_to 'New event', new_event_path, class: "btn btn-default" %>