<%= form_for @event do |f| %>
	<div>	
		<h2><%= f.label :title %>
		<%= f.text_field :title %></h1>
	</div>
	<div>
		<h4><%= f.label :start_date %>
		<%= f.date_field :start_date %></h4>
	</div>
	<div>
		<h4><%= f.label :period %>(month)
		<%= f.number_field :period %></h4>
	</div>

	<%= f.submit %>
<% end %>